---
import { Icon } from "astro-icon";
import ContentSection from "@/components/content-section.astro";
import type { FeatureItem } from "@/types";

const features: Array<FeatureItem> = [
  {
    title: "Asesoramiento",
    description:
      "Enfoque completamente personalizado y seguimiento continuo para cubrir tus necesidades y deseos",
    icon: "ion:bulb",
  },
  {
    title: "Coordinación",
    description:
      "Búsqueda exhaustiva de proveedores y espacios, con la mejor relación calidad-precio",
    icon: "vaadin:handshake",
  },
  {
    title: "Estrategia",
    description:
      "Comparativa de precios enfocada siempre en la opción más óptima según tus necesidades",
    icon: "mdi:directions-fork",
  },
  {
    title: "Planificación",
    description:
      "Definición del plan de acción individualizado. Propuesta de dinámicas",
    icon: "ph:calendar-fill",
  },
  {
    title: "Branding",
    description:
      "Diseñamos los creativos y branding en general de tu evento para diferenciarte de los demás",
    icon: "typcn:pencil",
  },
  {
    title: "Ejecución",
    description:
      "Dirigiremos y coordinaremos presencialmente tu evento para que todo salga según lo planeado",
    icon: "charm:notes-tick",
  },
];
---

<ContentSection title="¿Qué esperar de nuestro servicio?" id="nuestro-servicio">
  <Fragment slot="lead">
    <span class="text-primary">Despreocupate</span> de la organización de tus eventos.
    Centrate en lo realmente <span class="text-primary">importante para tu comunidad</span>.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3 my-6">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6 m-4 rounded-lg hover:scale-110 duration-300 hover:shadow-[0px_0px_15px_5px_rgb(217,159,39)]">
          <div class="h-16 w-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} />
          </div>
          <p class="text-center font-bold text-xl uppercase">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
  <a target="_blank"
        rel="noopener noreferrer"
        href="https://docs.google.com/forms/d/e/1FAIpQLSfjYNuh1_sX66Bujs5HlaoJSuSMJ6kYkM2xcQqYA91WuP8u6A/viewform"
        >
  <button
          class="rounded-full px-4 h-16 font-bold before:ease relative overflow-hidden text-white shadow-[1px_3px_5px_0px_rgba(255,255,255,0.5)] hover:shadow-[0px_0px_10px_2px_rgba(255,255,255,0.5)] transition-all before:absolute before:right-0 before:top-0 before:h-16 before:w-4 before:translate-x-12 before:rotate-6 before:bg-white before:opacity-10 before:duration-700 hover:shadow-yellow-500 hover:before:-translate-x-72 bg-gradient-to-br from-gray-300 via-yellow-400 via-yellow-600 to-yellow-800 hover:scale-110"
          >CONTACTA CON NOSOTROS</button
        >
  </a>
</ContentSection>
