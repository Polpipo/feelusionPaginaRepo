---
import { Icon } from "astro-icon";
import ContentSection from "@/components/content-section.astro";
import type { FeatureItem } from "@/types";

import { getI18N } from "@/i18n";
let { url } = Astro
const pathname = url.pathname

let currentLocale = "es"
if (pathname.startsWith("/ca/")) {
  currentLocale = "ca";
} else if (pathname.startsWith("/en/")) {
  currentLocale = "en";
}



const i18n = getI18N({ currentLocale });
const FEATURES = i18n.FEATURES;

const features: Array<FeatureItem> = [
  {
    title: FEATURES.TITLE_1,
    description: FEATURES.DESCRIPTION_1,
    icon: "ion:bulb",
  },
  {
    title: FEATURES.TITLE_2,
    description: FEATURES.DESCRIPTION_2,
    icon: "vaadin:handshake",
  },
  {
    title: FEATURES.TITLE_3,
    description: FEATURES.DESCRIPTION_3,
    icon: "mdi:directions-fork",
  },
  {
    title: FEATURES.TITLE_4,
    description: FEATURES.DESCRIPTION_4,
    icon: "ph:calendar-fill",
  },
  {
    title: FEATURES.TITLE_5,
    description: FEATURES.DESCRIPTION_5,
    icon: "typcn:pencil",
  },
  {
    title: FEATURES.TITLE_6,
    description: FEATURES.DESCRIPTION_6,
    icon: "charm:notes-tick",
  },
];
---

<ContentSection title={FEATURES.TITLE} id="nuestro-servicio">
  <Fragment slot="lead" set:html={FEATURES.DESCRIPTION}>
    
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3 my-6">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6 m-4 rounded-lg hover:scale-110 duration-300 hover:shadow-[0px_0px_15px_5px_rgb(217,159,39)]">
          <div class="h-16 w-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} />
          </div>
          <p class="text-center font-bold text-xl uppercase">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
  <a target="_blank"
        rel="noopener noreferrer"
        href="https://docs.google.com/forms/d/e/1FAIpQLSfjYNuh1_sX66Bujs5HlaoJSuSMJ6kYkM2xcQqYA91WuP8u6A/viewform"
        >
  <button
          class="rounded-full uppercase px-4 h-16 font-bold before:ease relative overflow-hidden text-white shadow-[1px_3px_5px_0px_rgba(255,255,255,0.5)] hover:shadow-[0px_0px_10px_2px_rgba(255,255,255,0.5)] transition-all before:absolute before:right-0 before:top-0 before:h-16 before:w-4 before:translate-x-12 before:rotate-6 before:bg-white before:opacity-10 before:duration-700 hover:shadow-yellow-500 hover:before:-translate-x-72 bg-gradient-to-br from-gray-300 via-yellow-400 via-yellow-600 to-yellow-800 hover:scale-110"
          >{FEATURES.BUTTON}</button
        >
  </a>
</ContentSection>
