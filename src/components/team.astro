---
import { Image } from "astro:assets";
import { Equipo } from "../constants/index";

const team:any = Equipo[0].equipo;
---

<div class="py-8 px-4 mx-auto max-w-screen-xl text-center lg:py-16 lg:px-6">
  <div class="mx-auto mb-8 max-w-screen-sm lg:mb-16">
    <h2
      class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"
    >
      Nuestro Equipo
    </h2>
    <p class="font-light text-gray-500 sm:text-xl dark:text-gray-400">
      Lorem ipsum dolor sit amet consectetur adipisicing elit.
    </p>
  </div>
  <!--<div class="grid gap-8 lg:gap-16 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">-->
  <div class="grid md:grid-cols-2 ">
    {Object.keys(team).map((miembro) => {
        const data = team[miembro];
        return (
        <div class="flex flex-col gap-6 mx-auto text-center w-[350px] text-gray-500 dark:text-gray-400 border border-default bg-offset p-6 m-6 rounded-lg hover:scale-110 duration-300 hover:shadow-[0px_0px_15px_5px_rgb(217,159,39)]">
            <Image
                class="mx-auto mb-4 w-36 h-36 rounded-full"
                src={data.Imagen}
                alt={data.Nombre}
                width="150"
                height="150"
            />
            <h3
                class="mb-1 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
            >
               <a href={data.Id}>{data.Nombre}</a>
            </h3>
            <p>{data.Posicion}</p>
            <ul class="flex justify-center mt-4 space-x-4">
                <li>
                <a
                    href=`https://www.instagram.com/${data.Instagram}`
                    target="_blank"
                    class="text-gray-900 hover:text-gray-900 dark:hover:text-white dark:text-gray-300"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="currentColor" viewBox="0,0,256,256" aria-hidden="true">
                    <g  fill-rule="evenodd" transform="scale(11)">
                    <path d="M8,3c-2.757,0 -5,2.243 -5,5v8c0,2.757 2.243,5 5,5h8c2.757,0 5,-2.243 5,-5v-8c0,-2.757 -2.243,-5 -5,-5zM8,5h8c1.654,0 3,1.346 3,3v8c0,1.654 -1.346,3 -3,3h-8c-1.654,0 -3,-1.346 -3,-3v-8c0,-1.654 1.346,-3 3,-3zM17,6c-0.55228,0 -1,0.44772 -1,1c0,0.55228 0.44772,1 1,1c0.55228,0 1,-0.44772 1,-1c0,-0.55228 -0.44772,-1 -1,-1zM12,7c-2.757,0 -5,2.243 -5,5c0,2.757 2.243,5 5,5c2.757,0 5,-2.243 5,-5c0,-2.757 -2.243,-5 -5,-5zM12,9c1.654,0 3,1.346 3,3c0,1.654 -1.346,3 -3,3c-1.654,0 -3,-1.346 -3,-3c0,-1.654 1.346,-3 3,-3z"></path></g></g>
                    </svg>
                </a>
                </li>
                <li>
                <a
                    href=`${data.Facebook}`
                    target="_blank"
                    class="text-[#39569c] hover:text-gray-900 dark:hover:text-white"
                >
                    <svg
                    class="w-6 h-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                    ><path
                        fill-rule="evenodd"
                        d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
                        clip-rule="evenodd"></path></svg
                    >
                </a>
                </li>
                <li>
                <a
                    href=`${data.Twitter}`
                    target="_blank"
                    class="text-[#39569c] hover:text-gray-900 dark:hover:text-white"
                >
                    <svg
                    class="w-6 h-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                    ><path
                        d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"
                    ></path></svg
                    >
                </a>
                </li>
                <li>
                <a
                    href=`${data.Linkedin}`
                    class="text-gray-900 hover:text-gray-900 dark:hover:text-white dark:text-gray-300"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 50 50" fill="currentcolor">
                        <path d="M41,4H9C6.24,4,4,6.24,4,9v32c0,2.76,2.24,5,5,5h32c2.76,0,5-2.24,5-5V9C46,6.24,43.76,4,41,4z M17,20v19h-6V20H17z M11,14.47c0-1.4,1.2-2.47,3-2.47s2.93,1.07,3,2.47c0,1.4-1.12,2.53-3,2.53C12.2,17,11,15.87,11,14.47z M39,39h-6c0,0,0-9.26,0-10 c0-2-1-4-3.5-4.04h-0.08C27,24.96,26,27.02,26,29c0,0.91,0,10,0,10h-6V20h6v2.56c0,0,1.93-2.56,5.81-2.56 c3.97,0,7.19,2.73,7.19,8.26V39z"></path>
                    </svg>
                </a>
                </li>
            </ul>
        </div>
        )})}
  </div>
</div>
