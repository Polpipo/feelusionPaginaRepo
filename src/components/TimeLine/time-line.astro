---
import ContentSection from "@/components/content-section.astro";
import TimeLineTSX from "./time-line.tsx";

import { getI18N } from "@/i18n";
let { url } = Astro
const pathname = url.pathname

let currentLocale = "es"
if (pathname.startsWith("/ca/")) {
  currentLocale = "ca";
} else if (pathname.startsWith("/en/")) {
  currentLocale = "en";
}
const i18n = getI18N({ currentLocale });
const TIMELINE = i18n.TIMELINE;
---

<ContentSection title={TIMELINE.TITLE} id="paso-a-paso">
  <Fragment slot="lead" set:html={TIMELINE.DESCRIPTION}>
  </Fragment>
  <TimeLineTSX timelineData={TIMELINE} client:only>
</ContentSection>
